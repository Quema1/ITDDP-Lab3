<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="https://jakarta.ee/xml/ns/jakartaee"
		 xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
		 id="WebApp_ID" version="5.0">
    <display-name>LB5jaxwsBookServiceWebClient</display-name>
    <context-param>
        <description>Used service</description>
        <param-name>selectedDao</param-name>
        <param-value>REST</param-value>
<!--        <param-value>SOAP</param-value>-->
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <display-name>EncodingFilter</display-name>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.example.server.filter.EncodingFilter</filter-class>
        <init-param>
            <description/>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.example.server.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <description>List existing clients</description>
        <display-name>ListClients</display-name>
        <servlet-name>ListClients</servlet-name>
        <servlet-class>org.example.server.client.web.ListClients</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListClients</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddClient</display-name>
        <servlet-name>AddClient</servlet-name>
        <servlet-class>org.example.server.client.web.AddClient</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddClient</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <description>View a client</description>
        <display-name>ViewClient</display-name>
        <servlet-name>ViewClient</servlet-name>
        <servlet-class>org.example.server.client.web.ViewClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewClient</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <description/>
        <display-name>DeleteClient</display-name>
        <servlet-name>DeleteClient</servlet-name>
        <servlet-class>org.example.server.client.web.DeleteClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteClient</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <description/>
        <display-name>UpdateClient</display-name>
        <servlet-name>UpdateClient</servlet-name>
        <servlet-class>org.example.server.client.web.UpdateClient</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateClient</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
</web-app>